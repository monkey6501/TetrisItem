// 用户信息  ===> 30 服务端推送
message AccountInfoMsg {
	required string nickName = 1; // 昵称
	required int32 playerId = 2;    // 账号
	required string headPic = 3;    // 头像url
	required int32 missionId = 4;   // 关卡id
	required int32 process = 5;     // 关卡进度
}

